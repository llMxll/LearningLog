print("Character stats generator")
print("")

repeat = "yes"

while repeat == "yes":
  name = input("Name your character: " )
  
  def roll(dieno):
    import random
    roll = random.randint(1,dieno)
    return(roll)
  
  health = roll(8) * roll(6)
  print("\033[31m","Their health is:", health,"hp")
  print("\033[37m", "")
  repeat = input("make another?: (yes/no)")
  print()

